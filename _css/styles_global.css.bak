/* styles_global.css - The global style sheet for my website.
 * Author:      Jamie-Rhys Edwards
 * Date:        2017-11-18
*/

html, body {
    margin: 0;
    padding: 0;
    border: 0;
    background-color: #595959;
}

h1, h2, p, nav a, ul, li, table {
    font-family: Arial, Helvetica, sans-serif;
}

header {
    margin: 0;
}

nav {
    background-color: #333333;
    padding: 10px;
    padding-left: 0;
    margin: 0px;
    margin-bottom: 0;
}

nav a {
    font-size: 1.2em;
    color: white;
    padding: 5px;
    text-decoration: none;
}

nav a:hover {
    background-color: #47d147;
    padding-top: 10px;
    padding-bottom: 10px;
}

main {
    background-color: white;
    margin-top: 0;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 0;
    width: 70%;
    border-right-color: #333333;
    border-right-style: solid;
}

article {
    margin: 0;
}

footer {
    background-color: #47d147;
    margin-top: 0;
    margin-left: auto;
    margin-right: auto;
    width: 70%;
    padding-top: 5px;
    padding-bottom: 5px;
    border-right-color: #333333;
    border-right-style: solid;
    border-bottom-style: solid;
}

footer p {
    margin: 0px;
    padding: 5px;
    text-align: center;
}

h1 {
    color: #008000; /* darkish green */
    margin: 0;
    padding: 5px;
    text-align: center;
}

h2 {
    text-align: center;
    padding: 5px;
    margin: 0;
}

h3 {
    font-family: Georgia, serif;
    padding: 5px;
}

p {
    padding: 10px;
    margin: 0px;
    text-align: justify;
}

table {
    border-collapse: collapse;
}

th {
    background-color: #47d147;
    padding: 10px;
    padding-top: 12px;
    padding-bottom: 12px;
    text-align:left;
    border: 1px solid #333333;
}

td {
    border: 1px solid #333333;
}

tr {
    border: 1px solid #333333;
    padding 10px;
    text-align: center;
}

tr:nth-child(even) {
    background-color:#f2f2f2f2;
}

tr:hover {
    background-color: #dddddd;
}